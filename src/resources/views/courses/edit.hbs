<h1>Chỉnh sửa khóa học</h1>

<div class="row">
    <div class="col-lg-12">
        <form action="/courses/{{course._id}}?_method=PUT" method="POST">
            <div class="form-group">
                Name: <input type="text" name="name" value="{{course.name}}" class="form-control" />
            </div>
            <div class="form-group">
                Description: <input type="text" name="description" value="{{course.description}}" class="form-control" />
            </div>
            <div class="form-group">
                Video id: <input type="text" name="videoId" value="{{course.videoId}}" class="form-control" />
            </div>

            <button class="btn btn-success">Save</button>
        </form>
    </div>
</div>