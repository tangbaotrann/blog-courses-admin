<h1>Các khóa học</h1>

<div class="row">
    {{!-- LOAD ALL --}}
    {{#each courses}}
    <div class="col-lg-4">
        <div class="card mt-4 card-bottom">
            <a href="/courses/{{this.slug}}">
                <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
            </a>
            <div class="card-body">
                <a href="/courses/{{this.slug}}">
                    <h5 class="card-title">{{this.name}}</h5>
                </a>
                <p class="card-text">{{this.description}}</p>
                <a href="#" class="btn btn-primary">Mua khóa học tại đây</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>